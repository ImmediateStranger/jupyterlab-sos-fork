{
  "compilerOptions": {
    "declaration": true,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2015",
    "outDir": "./lib",
    "allowSyntheticDefaultImports": true,
    "lib": ["ES6", "ES2015.Promise", "es2015.collection", "DOM"],
    "types": []
  },
  "include": ["src/*"]
}
